{
  "name": "mrpack-installer",
  "private": true,
  "description": "Instalador de modpacks (modrinth) para Minecraft",
  "author": "ALANDLN",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build_notsc": "vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "repository": "https://github.com/414ND1N/Mrpack-Installer",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.alandln.minecraftmrpackinstaller",
    "productName": "Minecraft Mrpack Installer",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "icon": "src/icons/app-icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "src/icons/app-icon.png",
      "target": ["AppImage", "deb", "tar.gz"]
    }
  },
  "dependencies": {
    "@mdi/react": "^1.6.1",
    "7zip-bin": "^5.2.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.10.0",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "jszip": "^3.10.1",
    "node-7z": "^3.0.0",
    "prompt": "^1.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.6.1",
    "semver": "^7.7.2",
    "tslib": "^2.8.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.6.0",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^7.0.0",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js"
}
